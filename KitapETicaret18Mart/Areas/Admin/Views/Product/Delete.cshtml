@model Product


<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Kategori Oluştur</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<form action="/" method="post">
			<input asp-for="Id" hidden />
			<div class="border p-3 mt-4">
				<div class="row pb-2">
					<h2 class="text-primary">
						KATEGORİ SİL
					</h2>
					<hr />
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Title" disabled class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Title"></label>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Description" disabled class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Description"></label>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="ISBN" disabled class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="ISBN"></label>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Author" disabled class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Author"></label>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="ListPrice" disabled class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="ListPrice"></label>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Price" disabled class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Price"></label>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Price50" disabled class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Price50"></label>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Price100" disabled class="form-control border-0 shadow" />
					<label class="ms-2" asp-for="Price100"></label>
				</div>

				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button asp-controller="Product" asp-action="Delete" type="submit" class="btn btn-danger form-control">SİL</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">LİSTEYE GERİ DÖN</a>
					</div>
				</div>
			</div>
		</form>

	</div>
</div>
